{
  "name": "voice-pipeline",
  "version": "5.0.0",
  "description": "Isomorphic STT → LLM → TTS pipeline library for AI voice agents and voice assistants",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./native": {
      "import": "./dist/backends/native/index.js",
      "types": "./dist/backends/native/index.d.ts"
    },
    "./cloud": {
      "import": "./dist/backends/cloud/index.js",
      "types": "./dist/backends/cloud/index.d.ts"
    },
    "./client": {
      "import": "./dist/client/index.js",
      "types": "./dist/client/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    }
  },
  "bin": {
    "voice-pipeline": "./dist/cli.js"
  },
  "files": [
    "dist",
    "scripts",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "prepublishOnly": "npm run build"
  },
  "workspaces": [
    "examples"
  ],
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
    "number-to-words": "^1.2.4"
  },
  "peerDependencies": {
    "ws": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "ws": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/number-to-words": "^1.2.3",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "voice",
    "voice-agent",
    "ai-voice-agent",
    "speech",
    "stt",
    "tts",
    "llm",
    "whisper",
    "transformers",
    "webgpu",
    "pipeline",
    "conversational-ai"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bigfive/voice-pipeline.git"
  },
  "author": "Jonathan Williams <bigfive@users.noreply.github.com>",
  "homepage": "https://github.com/bigfive/voice-pipeline#readme",
  "bugs": {
    "url": "https://github.com/bigfive/voice-pipeline/issues"
  }
}
